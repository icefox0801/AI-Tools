                "args": ["Live Captions (Parakeet)"]
            },
            {
                "name": "üó£Ô∏è Whisper",
                "color": "#a78bfa",
                "useVsCodeApi": true,
                "command": "workbench.action.tasks.runTask",
                "args": ["Live Captions (Whisper)"]
            },
            {
